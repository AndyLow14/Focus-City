<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/popupBuildingView"
        android:layout_width="270dp"
        android:layout_height="310dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:src="@drawable/jett120" />

    <TextView
        android:id="@+id/buildSuccessText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/popupBuildingView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-60dp"
        android:gravity="center"
        android:text="Construction Successful!"
        android:textSize="20dp"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popupBuildingView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="25dp"
        android:paddingTop="12dp"
        android:paddingRight="25dp"
        android:paddingBottom="12dp"
        android:text="Close"
        app:cornerRadius="28dp" />
</RelativeLayout>