<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekBarTimeSelect"
        android:layout_centerHorizontal="true"
        android:weightSum="8">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorPink"
            android:text="15"
            android:gravity="center"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="@color/colorPink"
            android:text=""
            android:gravity="center"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorPink"
            android:text="60"
            android:gravity="center"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textColor="@color/colorPink"
            android:text="90"
            android:gravity="center"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorPink"
            android:text="120"
            android:gravity="center"/>
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBarTimeSelect"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/progressBarCircle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:hapticFeedbackEnabled="true"
        android:max="7"
        android:progress="0"
        android:progressBackgroundTint="@color/colorPink"
        android:progressTint="@color/colorPink"
        android:secondaryProgressTint="@color/colorPink"
        android:thumbTint="@color/colorPink" />

    <TextView
        android:id="@+id/minutesText"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBarTimeSelect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50dp"
        android:textColor="@color/colorLightPink"
        android:gravity="right"
        android:text="Minutes" />

    <ProgressBar
        android:id="@+id/progressBarCircle"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_centerInParent="true"
        android:background="@drawable/drawable_circle_dark_blue"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/drawable_circle_pink"
        android:rotation="-90" />

    <TextView
        android:id="@+id/dummy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/buildingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dummy"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-55dp"
        android:text="15"
        android:textColor="@color/white"
        android:textSize="100dp" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dummy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="15:00"
        android:textColor="@color/colorLightPink"
        android:textSize="40sp" />

    <Button
        android:id="@+id/startStopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBarCircle"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:paddingLeft="25dp"
        android:paddingTop="12dp"
        android:paddingRight="25dp"
        android:paddingBottom="12dp"
        android:text="Build"
        app:cornerRadius="28dp" />
</RelativeLayout>